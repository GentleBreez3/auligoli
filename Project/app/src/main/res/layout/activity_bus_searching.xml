<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HospitalService">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_location_for_hospital"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter bus name"
            android:inputType="text"
            android:padding="20dp"
            android:autofillHints="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/hospital_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="Search"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="showHospitalList" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hospital_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route of "
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/specific_bus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerViewForShowingHospitalList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">
        </android.support.v7.widget.RecyclerView>



</LinearLayout>